generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  role          String
  phone         String?
  created_at    DateTime? @default(now())

  mappedArea MappedArea[]

  @@map("users")
}

model Cultivation {
  id                    String   @id @default(uuid())
  name                  String
  description           String?
  probable_harvest_date DateTime

  @@map("cultivations")
}

model MappedArea {
  id              String  @id @default(uuid())
  name            String
  geospatial_data String
  total_area      String
  center_pont     String?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("mappeds-area")
}
