generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  role          String
  phone         String?
  created_at    DateTime? @default(now())

  mappedArea MappedArea[]
  plantation Plantation[]

  @@map("users")
}

model Cultivation {
  id                    String   @id @default(uuid())
  name                  String
  description           String?
  probable_harvest_date DateTime

  plantation Plantation[]

  @@map("cultivations")
}

model MappedArea {
  id              String  @id @default(uuid())
  name            String
  geospatial_data String
  total_area      String
  center_pont     String?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  plantation Plantation[]

  @@map("mappeds-area")
}

model Plantation {
  id               String    @id @default(uuid())
  name             String
  planting_date    DateTime
  previous_culture String?
  created_at       DateTime? @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  cultivation   Cultivation @relation(fields: [cultivationId], references: [id])
  cultivationId String

  mappedArea   MappedArea @relation(fields: [mappedAreaId], references: [id])
  mappedAreaId String

  @@map("plantations")
}
